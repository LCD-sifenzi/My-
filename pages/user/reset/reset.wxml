

<view class='view-container'>

<view class='view-Logo'>
<image class='image-Logo' src='../../../images/app_logo.png'></image>
</view>

<view class='view-Item'>
  <image class='image-Icon' src='../../../images/login_账号.png'></image>
  <view>
    <input class='input-Name' placeholder='用户名/邮箱/手机号'
    bindinput='inputName'>
    </input>
    <view class='view-Line'></view>
  </view>
</view>

<view class='view-Item'>
  <image class='image-Icon' src='../../../images/login_密码.png'></image>
  <view>
    <input class='input-Name' password='true' placeholder='密码' 
    bindinput='inputPwd'>
    </input>
    <view class='view-Line'></view>
  </view>
</view>

<view class='view-Item'>
  <image class='image-Icon' src='../../../images/login_密码.png'></image>
  <view class='view-Code'>
    <input class='input-Name input-Code' password='true' placeholder='验证码' bindinput='inputCode'>
    </input>
    <view class='view-Line'></view>
  </view>
  <button class='button-register button-Code' bindtap='btnClickCode'>
  发送验证码
  </button>
</view>

<button class='button-Login' type='primary' bindtap='btnClickLogin'>重置密码</button>

</view>